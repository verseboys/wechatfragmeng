<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <LinearLayout
        android:id="@+id/id_tab_weixin"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">
        <!--不处理点击事件-->
        <ImageButton
            android:id="@+id/id_tab_winxinimg"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="#000000"
            android:clickable="false"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_main_home_selected" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/id_tab_adr"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/id_tab_adrmg"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="#000000"
            android:clickable="false"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_main_category_normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="通讯录" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_tab_onekey"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/id_tab_onekeyimg"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="#000000"
            android:clickable="false"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_main_home_normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_tab_frd"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/id_tab_frdimg"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="#000000"
            android:clickable="false"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_main_service_normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="朋友圈" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_tab_mine"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/id_tab_mineimg"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:clickable="false"
            android:background="#000000"
            android:scaleType="fitCenter"

            android:src="@drawable/icon_main_mine_normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我" />

    </LinearLayout>


</LinearLayout>